{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "plansDirectory": ".claude/plans",
  "respectGitignore": true,

  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(git *)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  }
}
